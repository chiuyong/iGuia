<p id="notice"><%= notice %></p>

<h1>Scripts</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Price</th>
      <th>Time</th>
      <th>Place1</th>
      <th>Place2</th>
      <th>Place3</th>
      <th>Car</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @scripts.each do |script| %>
      <tr>
        <td><%= script.category %></td>
        <td><%= script.price %></td>
        <td><%= script.time %></td>
        <td><%= script.place1 %></td>
        <td><%= script.place2 %></td>
        <td><%= script.place3 %></td>
        <td><%= script.car %></td>
        <td><%= script.active %></td>
        <td><%= link_to 'Show', script %></td>
        <td><%= link_to 'Edit', edit_script_path(script) %></td>
        <td><%= link_to 'Destroy', script, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Script', new_script_path %>
